{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run C program",
      "type": "shell",
      "command": "gcc",
      "args": ["${file}", "-o", "${fileBasenameNoExtension}", "&&", "./${fileBasenameNoExtension}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
